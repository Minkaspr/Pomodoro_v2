<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.SettingsFragment">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tvTitle"
        style="@style/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/frag_set_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:id="@+id/svContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frag_set_op_pomodoro"
                style="@style/Subtitle"
                android:layout_marginVertical="4dp"
                android:paddingHorizontal="16dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clExtended"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingHorizontal="16dp"
                android:foreground="?attr/selectableItemBackground">
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <TextView
                        android:id="@+id/tv_extended_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/MainText"
                        android:text="@string/frag_set_op_2_extended"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <TextView
                        android:id="@+id/tv_extended_descript"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/SecondaryText"
                        android:text="@string/frag_set_op_2_extended_descript"
                        app:layout_constraintTop_toBottomOf="@+id/textView1" />
                </androidx.appcompat.widget.LinearLayoutCompat>
                <ImageView
                    android:id="@+id/ivExtended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_check"
                    android:visibility="invisible"
                    android:contentDescription="@string/frag_set_descript_ic_check"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clClassic"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingHorizontal="16dp"
                    android:foreground="?attr/selectableItemBackground">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/tv_classic_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MainText"
                            android:text="@string/frag_set_op_1_classic"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/tv_classic_descript"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SecondaryText"
                            android:text="@string/frag_set_op_1_classic_descript"
                            app:layout_constraintTop_toBottomOf="@+id/textView1" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <ImageView
                        android:id="@+id/ivClassic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check"
                        android:contentDescription="@string/frag_set_descript_ic_check"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clShort"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingHorizontal="16dp"
                    android:foreground="?attr/selectableItemBackground">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/tv_short_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MainText"
                            android:text="@string/frag_set_op_3_short"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/tv_short_descript"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SecondaryText"
                            android:text="@string/frag_set_op_3_short_descript"
                            app:layout_constraintTop_toBottomOf="@+id/textView1" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <ImageView
                        android:id="@+id/ivShort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check"
                        android:visibility="invisible"
                        android:contentDescription="@string/frag_set_descript_ic_check"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clPersonalized"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingHorizontal="16dp"
                    android:foreground="?attr/selectableItemBackground">
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <TextView
                            android:id="@+id/tv_personalized_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/MainText"
                            android:text="@string/frag_set_op_4_personalized"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                        <TextView
                            android:id="@+id/tv_personalized_descript"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/SecondaryText"
                            android:text="@string/frag_set_op_4_personalized_descript"
                            app:layout_constraintTop_toBottomOf="@+id/textView1" />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                    <ImageView
                        android:id="@+id/ivPersonalized"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_check"
                        android:visibility="invisible"
                        android:contentDescription="@string/frag_set_descript_ic_check"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <!---&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;&#45;-->
            <com.google.android.material.divider.MaterialDivider
                style="?attr/materialDividerStyle"
                app:dividerThickness="2dp"
                app:dividerInsetStart="16dp"
                app:dividerInsetEnd="16dp"
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/frag_set_op_system"
                style="@style/Subtitle"
                android:paddingHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:layout_gravity="center_vertical"/>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llTheme"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:foreground="?attr/selectableItemBackground">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/frag_set_op_theme"
                    style="@style/MainText"
                    android:layout_gravity="center_vertical"/>
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llSound"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal"
                android:foreground="?attr/selectableItemBackground">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/frag_set_op_sound"
                    style="@style/MainText"
                    />
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_sound"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/frag_set_descript_switch_silent"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/llVibration"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:paddingHorizontal="16dp"
                android:orientation="horizontal"
                android:foreground="?attr/selectableItemBackground">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/frag_set_op_vibration"
                    style="@style/MainText"
                    />
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_vibration"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>