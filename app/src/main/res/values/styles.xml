<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Title" parent="@style/BaseText">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Subtitle" parent="@style/BaseText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="MainText" parent="@style/BaseText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <style name="SecondaryText" parent="@style/BaseText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="HelpText" parent="@style/BaseText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?attr/colorOutline</item>
    </style>

</resources>